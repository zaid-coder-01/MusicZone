<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
	<session-factory>

<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="connection.url">jdbc:mysql://localhost:3333/musicplayer</property>
<property name="connection.username">zaid</property>
<property name="connection.password">zaid</property>
<property name="hbm2ddl.auto">update</property>
<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
<property name="show_sql">true</property>
<mapping class="entity.users" />
<mapping class="entity.Songs" />
<mapping class="entity.Playlist" />
<mapping class="entity.listsong" />
<mapping class="entity.artist" />
<mapping class="entity.Rsong" />



	</session-factory>
</hibernate-configuration>